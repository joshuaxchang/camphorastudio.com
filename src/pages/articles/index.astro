---
// src/pages/articles/index.astro
// this page list all articles

import { getCollection } from 'astro:content';
import { Image } from 'astro:assets'; // Import Astro's Image component
import Layout from '../../layouts/Layout.astro';

// 1. Get all articles
const articles = await getCollection('articles', ({ data }) => {
  // Filter out draft posts if ever added them
  // return data.draft !== true;
  return true;
});

// 2. Sort articles by date if pubDate exists
articles.sort((a, b) => {
    if (a.data.pubDate && b.data.pubDate) {
        return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
    }
    return 0;
});
---

<Layout title="All Articles | Camphora Studio">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Articles</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {articles.map((article) => (
        <a href={`/articles/${article.slug}`} class="block bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          {article.data.thumbnail ? (
            <Image 
              src={article.data.thumbnail} 
              alt={`thumbnail for ${article.data.title}`}
              width={400} 
              height={250}
              format="webp"
              class="w-full h-48 object-cover" 
            />
          ) : (
            <div class="w-full h-48 bg-gray-200"></div> <!-- Placeholder for articles without a thumbnail -->
          )}
          <div class="p-6">
            <h2 class="text-2xl font-bold mb-2 text-gray-800">{article.data.title}</h2>
            <p class="text-gray-600 mb-4">{article.data.description}</p>
            <span class="text-blue-600 font-semibold">Read More &rarr;</span>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>

