---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const products = await getCollection('products');
products.sort((a, b) => {
    if (a.data.pubDate && b.data.pubDate) {
        return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
    }
    return 0;
});
---
<Layout title="Camphora Studio | Handcrafted Goods">
  <main>
    <section class="py-28 px-4 text-center bg-gradient-to-b from-brand-text/10 to-brand-bg">
      <div class="max-w-4xl mx-auto">
        <h1 class="font-heading text-5xl md:text-7xl font-bold mb-4 text-brand-text">Welcome to Camphora Studio</h1>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          Discover our collection of thoughtfully designed and handcrafted goods, made with care and precision.
        </p>
      </div>
    </section>

    <section id="products" class="py-20">
      <div class="max-w-5xl mx-auto px-4">
        <h2 class="font-heading text-4xl font-bold mb-12 text-center text-brand-text">Our Collection</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {products.map((product) => (
            <div class="group bg-brand-card rounded-lg shadow-card hover:shadow-card-hover transition-all duration-300 flex flex-col">
              <a href={`/${product.slug}`}>
                {product.data.thumbnail ? (
                  <div class="overflow-hidden aspect-square">
                    <Image 
                      src={product.data.thumbnail} 
                      alt={`thumbnail for ${product.data.title}`}
                      width={500} 
                      height={500}
                      format="webp"
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" 
                    />
                  </div>
                ) : (
                  <div class="w-full aspect-square bg-brand-bg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
              </a>
              <div class="p-6 flex flex-col flex-grow">
                <h3 class="font-heading text-2xl font-bold text-brand-text mb-2">{product.data.title}</h3>
                <p class="text-gray-600 mb-4 flex-grow">{product.data.description}</p>
                <div class="flex justify-between items-center mt-auto">
                  <a href={`/${product.slug}`} class="text-brand-accent font-semibold hover:underline">Details &rarr;</a>
                  <button class="bg-brand-primary text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-brand-primary-hover transition-colors">
                    Buy Now
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>