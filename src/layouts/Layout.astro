---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CartDrawer from '../components/CartDrawer.astro';
import '../styles/global.css';
import '../styles/fonts.css';

interface Props {
	title: string;
	description?: string;
}

const { 
    title = 'Camphora Studio', 
    description = 'Web Shop' 
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<script defer src="https://cloud.umami.is/script.js" data-website-id="037d6880-e7c8-4c28-84be-cfa033e9915d"></script>
    	<title>{title}</title>
	</head>
    <body class="bg-brand-bg text-brand-text">
		<Header />
		<slot />
		<Footer />
		<CartDrawer /> 
		<script type="module" src="/src/lib/cart-store.js"></script>
	</body>
</html>
